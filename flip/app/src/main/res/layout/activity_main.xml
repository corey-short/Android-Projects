<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                tools:context=".MainActivity"
                android:id="@+id/top_layout">

    <RelativeLayout
        android:id="@+id/main_activity_top_bar"
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:background="@color/blue_top_bar_accent">

        <ImageButton
            android:id="@+id/menu_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:src="@drawable/menu_button"
            android:background="@color/blue_top_bar_accent"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"/>

        <ImageView
            android:id="@+id/flip_logo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:src="@drawable/flip_logo"/>

        <ImageButton
            android:id="@+id/connect_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:src="@drawable/connect_button"
            android:background="@color/blue_top_bar_accent"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:onClick="connectBLE"
            android:contentDescription="cnt_btn"/>

    </RelativeLayout>

    <TextView
        android:id="@+id/explore"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="@string/explore"
        android:textColor="@color/white_accent"
        android:gravity="center"
        android:background="@color/gray_accent"
        android:paddingTop="1dp"
        android:paddingBottom="1dp"
        android:layout_marginTop="50dp"
        android:layout_centerHorizontal="true" />

    <ListView
        android:id="@+id/sea_creature_image"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/explore"
        android:layout_centerHorizontal="true"
        android:layout_alignParentTop="true"
        android:paddingTop="60dp"/>

    <TextView
        android:id="@+id/sea_creature_description"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_below="@id/sea_creature_image"/>

    <RelativeLayout
        android:id="@+id/main_activity_bottom_bar"
        android:background="@color/gray_bottom_bar_accent"
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true" >

        <ImageButton
            android:id="@+id/fish_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:src="@drawable/fish_button"
            android:background="@color/gray_bottom_bar_accent"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"/>

        <ImageButton
            android:id="@+id/graph_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:background="@color/gray_bottom_bar_accent"
            android:src="@drawable/graph_button"/>

        <ImageButton
            android:id="@+id/location_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:src="@drawable/location_button"
            android:background="@color/gray_bottom_bar_accent"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"/>


    </RelativeLayout>

</RelativeLayout>

